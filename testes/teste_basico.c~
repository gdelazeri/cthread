//FUNÇÃO QUE MOSTRA A FUNCIONALIDADE DO DISPATCHER, CJOIN, CYIELD, CCREATE 
//E O COMPORTAMENTO DO ESCALONADOR DADO PELOS TICKETS// 
#include "../include/support.h"
#include "../include/cthread.h"
#include <stdio.h>


#define		N	25
void *func0(void *arg) {
	int i=1;
	printf("Eu sou a thread ID: %d printando pela %d vez\n", (int)arg, i);
	i++;
	cyield();
	printf("Eu sou a thread ID: %d printando pela %d vez\n", (int)arg, i);
	
	return NULL;
}

int main(int argc, char *argv[]) {

	int	id[N];
	int i;

	printf("\nCASO DE TESTE DA BIBLIOTECA cthread\n\n");	

	for(i=0; i < N; i++){	
		id[i] = ccreate(func0, (void *)(i+1));
	};

	printf("Eu sou a main após a criação das threads\n");
	for(i=0; i < N; i++){
		cjoin(id[i]);
	};
	printf("Eu sou a main voltando para terminar o programa\n");

	printf("\nFIM DO CASO DE TESTE\n\n");
	printf("Nomes:\n %s", names);

	return 0;
}

